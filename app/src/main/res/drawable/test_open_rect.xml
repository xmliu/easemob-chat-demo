<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- This is the main color -->
    <item>
        <shape>
            <!--    边框颜色 -->
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
    <!-- 给View的上 左  右设置8dp的边框 -->
    <item android:bottom="1px" android:left="1px" android:right="1px" android:top="-2dp" >
        <shape>
            <!--     View填充颜色 -->
            <solid android:color="@color/transparent" />
            <stroke android:color="#E67A7A"   android:width="1dp"/>
        </shape>
    </item>

</layer-list>